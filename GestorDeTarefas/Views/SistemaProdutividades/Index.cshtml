@model SistemProdListViewmodel

@{
    ViewData["Title"] = "Index";
}

<h1>Lista dos Projetos</h1>

<p>Existem no total de @Model.PagingInfo.TotalItems projetos</p>


<p>
    <a asp-action="Create" class="btn btn-dark">Criar novo Projeto</a>
</p>

<div class="card">
    <div class="card-body">
        <h5 class="card-title">Pesquisar</h5>
        <form asp-action="Index" method="get">
            <label for="nome" class="control-label">Nome</label>
            <input name="nome" type="search" class="form-control" value="@Model.NomeSearched" />
            <div class="mt-3">
                <input type="submit" value="Pesquisar" class="btn btn-info" />
                <a asp-action="Index" class="btn btn-secondary">Limpar</a>
            </div>
        </form>
    </div>
</div>


@foreach (var projeto in Model.ProjetoProdutividade)
{
    <div class="card mt-3">
        <div class="card-body">
            <h5 class="card-title">Projeto: @projeto.NomeProjeto</h5>
            <p class="card-text lead">Estado do Projeto: @projeto.EstadoProjeto</p>


            <a asp-action="Details" asp-route-id="@projeto.SistemaProdutividadeId" class="btn btn-info">Detalhes</a>
            <a asp-action="Edit" asp-route-id="@projeto.SistemaProdutividadeId" class="btn btn-warning">Editar</a>
            <a asp-action="Delete" asp-route-id="@projeto.SistemaProdutividadeId" class="btn btn-danger">Apagar</a>
            <a asp-action="DetailsColaboradorProjeto" asp-route-id="@projeto.SistemaProdutividadeId" class="btn btn-outline-info">Ver Colaboradores</a>
            <a asp-action="AdicionarColaboradores" asp-route-id="@projeto.SistemaProdutividadeId" class="btn btn-outline-success">Adicionar Colaboradores</a>

        </div>
    </div>

}

<nav class="mt-3">
    <ul class="pagination">
        @{
            if (Model.PagingInfo.CurrentPage == 1)
            {
                <li class="page-item disabled">
                    <a class="page-link" href="#" tabindex="-1">First</a>
                </li>
            }
            else
            {
                <li class="page-item">
                    <a class="page-link" asp-action="Index" asp-route-page="1">Primeiro</a>
                </li>
            }

            int firstPage = Model.PagingInfo.CurrentPage - PagingInfo.NUMBER_PAGES_SHOW_BEFORE_AFTER;
            if (firstPage < 1) firstPage = 1;

            int lastPage = Model.PagingInfo.CurrentPage + PagingInfo.NUMBER_PAGES_SHOW_BEFORE_AFTER;
            if (lastPage > Model.PagingInfo.TotalPages) lastPage = Model.PagingInfo.TotalPages;

            for (int p = firstPage; p <= lastPage; p++)
            {
                if (p == Model.PagingInfo.CurrentPage)
                {
                    <li class="page-item active">
                        <a class="page-link" href="#">@p <span class="sr-only">(current)</span></a>
                    </li>
                }
                else
                {
                    <li class="page-item">
                        <a class="page-link" asp-action="Index" asp-route-page="@p">@p</a>
                    </li>

                }
            }

            if (Model.PagingInfo.CurrentPage == Model.PagingInfo.TotalPages)
            {
                <li class="page-item disabled">
                    <a class="page-link" href="#" tabindex="-1">Ultimo</a>
                </li>
            }
            else
            {
            <li class="page-item">
                <a class="page-link" asp-action="Index" asp-route-page="@Model.PagingInfo.TotalPages">Ultimo</a>
            </li>
                }
            }
        </ul>
</nav>
