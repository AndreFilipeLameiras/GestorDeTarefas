@model GestorDeTarefas.ViewModels.SistemProdListViewmodel

@{
    ViewData["Title"] = "Detalhes";
}



<div div style="margin-bottom:379px;">
    <h4>Detalhes Projeto Sistema Produtividade</h4>


    <table class="table ">
        <thead>
            <tr>
                <th scope="col">Nome do Projeto</th>
                <th scope="col">Colaboradores</th>
                <th scope="col">Data de inicio</th>
                <th scope="col">Data de fim</th>

            </tr>
        </thead>
        <tbody>
            <tr>
                <td>
                    @Html.DisplayFor(model => model.NomeProjeto)
                </td>
                @if (Model.Colaboradores != null)
                {
                    <td>
                        @foreach (var item in Model.Colaboradores)
                        {
                            if (item.Checked)
                            {
                                <div>@item.Name</div>

                            }
                        }

                    </td>
                    <td>
                        @for (int i = 0; i < Model.Colaboradores.Count(); i++)
                        {
                            if (Model.Colaboradores[i].Checked)
                            {

                                <dd>
                                    @Html.DisplayFor(m => Model.Colaboradores[i].DataInicio)

                                </dd>
                            }
                        }

                    </td>
                    <td>
                        @for (int i = 0; i < Model.Colaboradores.Count(); i++)
                        {
                            if (Model.Colaboradores[i].Checked)
                            {

                                <dd>
                                    @Html.DisplayFor(m => Model.Colaboradores[i].DataFim)

                                </dd>
                            }
                        }
                    </td>
                }
            </tr>

        </tbody>
    </table>

</div>

<div>
    <a asp-action="Edit" asp-route-id="@Model.SistemaProdutividadeId" class="btn btn-warning">Editar</a> |
    <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
</div>


