@model GestorDeTarefas.Models.PedidoCliente
@{
    ViewData["Title"] = "Abrir Mensagem";
}

<h1>Mensagem do cliente:  @Html.DisplayFor(model => model.Cliente.Nome)</h1>

<div>
  
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Mensagem)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Mensagem)
        </dd>

        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.DataRealizarPedido)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.DataRealizarPedido)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.DataPedido)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.DataPedido)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ProjetoSprintDesign)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ProjetoSprintDesign.NomeProjeto)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.SistemaProdutividade)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.SistemaProdutividade.NomeProjeto)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Cliente)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Cliente.Nome)
        </dd>

    </dl>
</div>
<div>
    @if (User.IsInRole("gestor") || User.IsInRole("admin"))
    {
        <a asp-action="ResponderPedido" class="btn btn-info" asp-route-id="@Model.ID">Responder</a> 
                                                                                                    }
<a class="btn btn-secondary" asp-controller="ProjetoSprintDesigns" asp-action="Index">Voltar</a>
</div>
