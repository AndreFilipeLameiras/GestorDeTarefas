@model GestorDeTarefas.Models.ProjetoSprintDesign

@{
    ViewData["Title"] = "Apagar";
}

<h1 class="text-danger" >Apagar Projeto Sprint Design</h1>

<h3 class="text-danger">Tem certeza que quer apagar isto?</h3>
<div style="margin-bottom:175px">
    
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.NomeProjeto)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.NomeProjeto)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.DataPrevistaInicio)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.DataPrevistaInicio)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.DataDefinitivaInicio)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.DataDefinitivaInicio)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.DataPrevistaFim)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.DataPrevistaFim)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.DataDefinitivaFim)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.DataDefinitivaFim)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.EstadoProjeto)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.EstadoProjeto)
        </dd>

        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ImagemProjeto)
        </dt>
        <dd class="col-sm-10">
            <img src="@("~/Imagens/"+ Model.ImagemProjeto)" asp-append-version="true" width="80px" height="80px" alt="Card image cap" />
        </dd>

    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="ProjetoSprintDesignID" />
        <input type="submit" value="Apagar" class="btn btn-danger" />
        <a asp-action="Index" class="btn btn-secondary">Cancelar</a> 
    </form>
</div>
