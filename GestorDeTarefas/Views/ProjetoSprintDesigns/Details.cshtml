@model GestorDeTarefas.Models.ProjetoSprintDesign

@{
    ViewData["Title"] = "Detalhes";
} 
 
<h1>Detalhes Projeto Sprint Design</h1>
<div>
    <div>

        <hr />
        <dl class="row">
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.NomeProjeto)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.NomeProjeto)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.DataPrevistaInicio)
            </dt>
            <dd class="col-sm-10">
                @Model.DataPrevistaInicio.ToString("dd/MM/yyyy")
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.DataDefinitivaInicio)
            </dt>
            <dd class="col-sm-10">
                @*@if (Model.DataDefinitivaInicio!=null)*@
                @Model.DataDefinitivaInicio.ToString("dd/MM/yyyy")
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.DataPrevistaFim)
            </dt>
            <dd class="col-sm-10">
                @Model.DataPrevistaFim.ToString("dd/MM/yyyy")
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.DataDefinitivaFim)
            </dt>
            <dd class="col-sm-10">
                @if (Model.DataDefinitivaFim == null)
                {
                    <h6 class="text-info">Por definir</h6>
                }
                @if (Model.DataDefinitivaFim != null)
                {
                    @Html.DisplayFor(model => model.DataDefinitivaFim)
                }
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.EstadoProjeto)
            </dt>
            <dd class="col-sm-10">
                @if (Model.EstadoProjeto.Equals("Em atraso"))
                {
                    <h6 class="text-danger">
                        @Html.DisplayFor(model => model.EstadoProjeto)
                    </h6>
                }
                @if (Model.EstadoProjeto.Equals("Dentro do prazo"))
                {
                    <h6 class="text-warning">
                        @Html.DisplayFor(model => model.EstadoProjeto)
                    </h6>}
                @if (Model.EstadoProjeto.Equals("Concluído"))
                {
                    <h6 class="text-success">
                        @Html.DisplayFor(model => model.EstadoProjeto)
                    </h6>
                }


            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Cliente)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Cliente.Nome)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.ImagemProjeto)
            </dt>
            <dd class="col-sm-10">
                <img src="@("~/Imagens/"+ Model.ImagemProjeto)" asp-append-version="true" width="60px" height="60px" alt="Card image cap" />
            </dd>
        </dl>
    </div>
    <div>
        <a asp-action="Edit" asp-route-id="@Model.ProjetoSprintDesignID" class="btn btn-warning">Editar</a> |
        <a asp-action="Index" class="btn btn-secondary">Voltar à lista</a>
    </div>
</div>