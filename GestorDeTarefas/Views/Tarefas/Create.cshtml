@model GestorDeTarefas.Models.Tarefas

@{
    ViewData["Title"] = "Criar";
}

<h1>Criar Tarefas</h1>


<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Nome" class="control-label"></label>
                <input asp-for="Nome" class="form-control" />
                <span asp-validation-for="Nome" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DataPrevistaInicio" class="control-label"></label>
                <input asp-for="DataPrevistaInicio" class="form-control" />
                <span asp-validation-for="DataPrevistaInicio" class="text-danger"></span>
            </div>        
            <div class="form-group">
                <label asp-for="DataPrevistaFim" class="control-label"></label>
                <input asp-for="DataPrevistaFim" class="form-control" />
                <span asp-validation-for="DataPrevistaFim" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="ColaboradorId" class="control-label"></label>
                <select id="lista1" asp-for="ColaboradorId" class="form-control " asp-items="ViewBag.ColaboradorId">
                    <option value="">-- Escolha opção --</option>
                </select>
                <span asp-validation-for="ColaboradorId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ProjetoSprintDesignID" class="control-label">Projetos Sprint</label>
                <select id="lista2" asp-for="ProjetoSprintDesignID" class="form-control" asp-items="ViewBag.ProjetoSprintDesignID">
                    <option value="">-- Escolha opção --</option>
                </select>
                <span asp-validation-for="ProjetoSprintDesignID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="SistemaProdutividadeId" class="control-label">Projetos Produtividade</label>
                <select id="lista3" asp-for="SistemaProdutividadeId" class="form-control" asp-items="ViewBag.SistemaProdutividadeId">
                    <option value="">-- Escolha opção --</option>
                </select>
                <span asp-validation-for="SistemaProdutividadeId" class="text-danger"></span>
            </div>


            <div class="form-group">
                <input type="submit" value="Criar" class="btn btn-primary" />
                <a asp-action="Index" class="btn btn-secondary">Voltar a lista</a>
            </div>
        </form>
    </div>
</div>



@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}

    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/select2@4.0.13/dist/css/select2.min.css" />
    <script type="text/javascript" src="https://ajax.googleapis.com/ajax/libs/jquery/1.8.3/jquery.min.js"></script>
    <script type="text/javascript" src="https://cdn.jsdelivr.net/npm/select2@4.0.13/dist/js/select2.min.js"></script>

    <script type="text/javascript">
        $(function () {
            $("#lista1").select2();
        });
    </script>

    <script type="text/javascript">
        $(function () {
            $("#lista2").select2();
        });
    </script>

    <script type="text/javascript">
        $(function () {
            $("#lista3").select2();
        });
    </script>
}

