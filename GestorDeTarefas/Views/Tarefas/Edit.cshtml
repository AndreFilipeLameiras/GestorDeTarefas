@model GestorDeTarefas.Models.Tarefas

@{
    ViewData["Title"] = "Editar";
}

<h1>Editar Tarefas</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="Nome" class="control-label"></label>
                <input asp-for="Nome" class="form-control" />
                <span asp-validation-for="Nome" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DataPrevistaInicio" class="control-label"></label>
                <input asp-for="DataPrevistaInicio" class="form-control" />
                <span asp-validation-for="DataPrevistaInicio" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DataDefinitivaInicio" class="control-label"></label>
                <input asp-for="DataDefinitivaInicio" class="form-control" />
                <span asp-validation-for="DataDefinitivaInicio" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DataPrevistaFim" class="control-label"></label>
                <input asp-for="DataPrevistaFim" class="form-control" />
                <span asp-validation-for="DataPrevistaFim" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DataDefinitivaFim" class="control-label"></label>
                <input asp-for="DataDefinitivaFim" class="form-control" />
                <span asp-validation-for="DataDefinitivaFim" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ColaboradorId" class="control-label"></label>
                <select asp-for="ColaboradorId" class="form-control" asp-items="ViewBag.ColaboradorId">
                    <option value="">-- Escolha opção --</option>
                </select>
                <span asp-validation-for="ColaboradorId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ProjetoSprintDesignID" class="control-label">Projetos Sprint</label>
                <select asp-for="ProjetoSprintDesignID" class="form-control" asp-items="ViewBag.ProjetoSprintDesignID">
                    <option value="">-- Escolha opção --</option>
                </select>
                <span asp-validation-for="ProjetoSprintDesignID" class="text-danger"></span>
            </div>
            <div class="form-group">
            <label asp-for="SistemaProdutividadeId" class="control-label">Projetos Produtividade</label>
            <select asp-for="SistemaProdutividadeId" class="form-control" asp-items="ViewBag.SistemaProdutividadeId">
                <option value="">-- Escolha opção --</option>
            </select>
            <span asp-validation-for="SistemaProdutividadeId" class="text-danger"></span>
    </div>

    <div class="form-group">
        <input type="submit" value="Guardar" class="btn btn-primary" />
        <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
    </div>
    </form>
</div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
