@model ClienteListViewModel

@{
    ViewData["Title"] = "Clientes";
}

<h1>Clientes</h1>

<p>Há um total de @Model.PagingInfo.TotalItems clientes</p>

<p>
    <a asp-action="Register" class="btn btn-dark">Criar novo cliente</a>
</p>


@foreach (var cliente in Model.Clientes)
{
    <div class="card mt-3">
        <div class="card-body">
            <h5 class="card-title">@cliente.Nome</h5>
            <p class="card-text lead">@cliente.Email</p>


            <a asp-action="Details" asp-route-id="@cliente.ClienteId" class="btn btn-info">Details</a>
            <a asp-action="Edit" asp-route-id="@cliente.ClienteId" class="btn btn-warning">Edit</a>
            <a asp-action="Delete" asp-route-id="@cliente.ClienteId" class="btn btn-danger">Delete</a>
        </div>
    </div>
}

<nav class="mt-3">
    <ul class="pagination">
        <li class="page-item">
            <a class="page-link" asp-action="Index" asp-route-page="1">Primeiro</a>
        </li>
        @{
            for (int p = 1; p <= Model.PagingInfo.TotalPages; p++)
            {
                <li class="page-item">
                    <a class="page-link" asp-action="Index" asp-route-page="@p">@p</a>
                </li>
            }
        }
        <li class="page-item">
            <a class="page-link" asp-action="Index" asp-route-page="@Model.PagingInfo.PageSize">Ultimo</a>
        </li>
    </ul>
</nav>