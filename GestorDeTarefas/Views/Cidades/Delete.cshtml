@model GestorDeTarefas.Models.Cidade


@{
    ViewData["Title"] = "Delete Cidade";
}

<h1 class="text-danger">Apagar Cidade</h1>

<h3 class="text-danger">Tem certeza que deseja apagar?</h3>
<div>

    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Nome_Cidade)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Nome_Cidade)
        </dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="CidadeId" />
        <input type="submit" value="Apagar" class="btn btn-danger" />
        <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
    </form>
</div>
