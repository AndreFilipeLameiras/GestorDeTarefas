@model GestorDeTarefas.Models.Cidade

@{
    ViewData["Title"] = "Edit Cidade";
}

<h1>Editar Cidade</h1>

<hr />

<form asp-action="Edit">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <input type="hidden" asp-for="CidadeId" />
    <div class="form-group">
        <label asp-for="Nome_Cidade" class="control-label">Nome da Cidade</label>
        <input asp-for="Nome_Cidade" class="form-control" />
        <span asp-validation-for="Nome_Cidade" class="text-danger"></span>
    </div>
    <div class="form-group">
        <input type="submit" value="Guardar" class="btn btn-primary" />
        <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
    </div>
</form>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

