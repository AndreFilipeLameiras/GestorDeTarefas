@model IEnumerable<GestorDeTarefas.Models.Colaborador>

@{
    ViewData["Title"] = "Index";
}

<h1>Colaboradores</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Contacto)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Cargo)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.ColaboradorId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.ColaboradorId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.ColaboradorId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
