@model GestorDeTarefas.Models.Contacto

@{
    ViewData["Title"] = "Responder";
}

<h1>Responder</h1>

<h4>Contacto</h4>
<hr />
<div class="row">
    <div class="col-md-6 text-left">
        <fieldset class="border p-4 list-inline-item">
            <legend class="w-auto text-center font-weight-bold"></legend>
            <form asp-action="GestorResponde">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="ContactoId" />
                <div class="form-group">
                    <label class="control-label">Nome</label>
                    <input  asp-for="Nome" class="form-control"readonly/>                  
                    <span asp-validation-for="Nome" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label class="control-label">Sobrenome</label>
                    <input readonly asp-for="Sobrenome" class="form-control" />                 
                    <span asp-validation-for="Sobrenome" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Email" class="control-label">Email</label>
                    <input readonly asp-for="Email" class="form-control" />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="DataEnvio" class="control-label">Data de envio </label>
                    <input readonly asp-for="DataEnvio" class="form-control" />
                    <span asp-validation-for="DataEnvio" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label class="control-label">Assunto</label>
                    <input readonly asp-for="Assunto" class="form-control" />
                    <span asp-validation-for="Assunto" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label class="control-label">Mensagem</label>
                    <textarea asp-for="Mensagem" class="form-control" rows="6" cols="50" readonly ></textarea>
                    <span asp-validation-for="Mensagem" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label class="control-label">Resposta</label>
                    <textarea asp-for="Resposta" class="form-control" rows="6" cols="50"></textarea>
                    <span asp-validation-for="Resposta" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="Responder" class="btn btn-info" />

                    <a class="btn btn-secondary" asp-action="Index">Voltar</a>
                </div>
            </form>
        </fieldset>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
