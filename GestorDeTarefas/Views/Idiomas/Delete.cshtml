@model GestorDeTarefas.Models.Idioma

@{
    ViewData["Title"] = "Delete";
}

<h1>Eliminar Idioma</h1>

<h3>Tem a certeza que quer eliminar o idioma?</h3>
<div>
    <h4>Idioma</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.NomeIdioma)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.NomeIdioma)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="IdiomaId" />
        <input type="submit" value="Eliminar" class="btn btn-danger" /> |
        <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
    </form>
</div>
