@model GestorDeTarefas.Models.Idioma

@{
    ViewData["Title"] = "Edit";
}

<h1>Editar Idioma</h1>



<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="IdiomaId" />
            <div class="form-group">
                <label asp-for="NomeIdioma" class="control-label"></label>
                <input asp-for="NomeIdioma" class="form-control" />
                <span asp-validation-for="NomeIdioma" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Guardar" class="btn btn-primary" />
                <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
            </div>
        </form>
    </div>
</div>



