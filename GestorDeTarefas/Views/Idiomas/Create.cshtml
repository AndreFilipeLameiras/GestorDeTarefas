@model GestorDeTarefas.Models.Idioma

@{
    ViewData["Title"] = "Create";
}

<h1>Criaçao de um Idioma</h1>


<hr />


<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="NomeIdioma" class="control-label"></label>
                <input asp-for="NomeIdioma" class="form-control" />
                <span asp-validation-for="NomeIdioma" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
                <a asp-action="Index" class="btn btn-secondary">Cancel</a>
            </div>
        </form>
    </div>
</div>



