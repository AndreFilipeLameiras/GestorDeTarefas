@model GestorDeTarefas.Models.Cargo

@{
    ViewData["Title"] = "Create Cargo";
}

<h1>Criar Cargo</h1>

<hr />

        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Nome_Cargo" class="control-label"></label>
                <input asp-for="Nome_Cargo" class="form-control" />
                <span asp-validation-for="Nome_Cargo" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
                <a asp-action="Index" class="btn btn-secondary">Cancel</a>
            </div>
        </form>
    </div>
</div>



@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
