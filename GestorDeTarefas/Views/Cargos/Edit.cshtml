@model GestorDeTarefas.Models.Cargo

@{
    ViewData["Title"] = "Edit Cargo";
}

<h1>Editar Cargo</h1>

<hr />

        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="CargoId" />
            <div class="form-group">
                <label asp-for="Nome_Cargo" class="control-label"></label>
                <input asp-for="Nome_Cargo" class="form-control" />
                <span asp-validation-for="Nome_Cargo" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Guardar" class="btn btn-primary" />
                <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
            </div>
        </form>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
