@model GestorDeTarefas.Models.Cargo

@{
    ViewData["Title"] = "Delete Cargo";
}

<h1 class="text-danger">Apagar Cargo</h1>

<h3 class="text-danger">Tem certeza que deseja apagar?</h3>
<div>

    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Nome_Cargo)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Nome_Cargo)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="CargoId" />
        <input type="submit" value="Delete" class="btn btn-danger" />
        <a asp-action="Index" class="btn btn-secondary">Cancel</a>
    </form>
</div>
